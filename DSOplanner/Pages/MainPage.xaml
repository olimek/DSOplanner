<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DSOplanner.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto,*">
        <!--  Nagłówek  -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Padding="10"
            BackgroundColor="DarkGray">
          
            <!--  Logo  -->
            <Image
                HeightRequest="40"
                Source="logo.png"
                VerticalOptions="Center" />
            <!--  Tytuł  -->
            <Label
                
                Margin="10,0,0,0"
                FontSize="20"
                Text="AstroWeather"
                VerticalOptions="Center" />
            <!--  Przycisk ustawień  -->
            <Button
                
                Text="Ustawienia"
                VerticalOptions="Center" />
        </Grid>

        <!--  Główna treść  -->
        <StackLayout
            Grid.Row="1"
            
            Padding="10"
            Spacing="15">
            <!--  Pasek filtru (np. wybór daty sesji)  -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="Data sesji:" VerticalOptions="Center" />
                <DatePicker x:Name="SessionDatePicker" />
            </StackLayout>

            <!--  Lista obiektów DSO  -->
            <ListView x:Name="ItemsListView" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                                <!--  Informacje o obiekcie  -->
                                <StackLayout>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="{Binding Name}" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding Description}"
                                        TextColor="Gray" />
                                    <!--  Dodatkowe informacje, np. typ, widoczność itp.  -->
                                    <Label
                                        FontSize="12"
                                        Text="{Binding Type}"
                                        TextColor="DarkGray" />
                                </StackLayout>
                              
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </Grid>
</ContentPage>
